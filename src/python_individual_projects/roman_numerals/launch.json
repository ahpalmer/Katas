    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Pytest",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/my_env/Scripts/pytest.exe",
            "args": [
                "--maxfail=1",
                "--disable-warnings"
            ],
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}